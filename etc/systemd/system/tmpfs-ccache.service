[Unit]
Description=Sync local folder and tmpfs dir to speedup ccache

[Service]
Type=simple
EnvironmentFile=/etc/tmpfs-ccache
ExecStart=/usr/local/bin/tmpfs-ccache-service.sh start $TMPFS $PERSISTENT
ExecStop=/usr/local/bin/tmpfs-ccache-service.sh stop $TMPFS $PERSISTENT
RemainAfterExit=yes
RequiresMountFor=/tmp
 
[Install]
WantedBy=multi-user.target
